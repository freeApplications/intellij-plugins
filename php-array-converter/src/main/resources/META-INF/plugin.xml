<idea-plugin>
    <id>io.github.freeApplications.intellij-plugins</id>
    <name>PHP Array Converter</name>
    <vendor url="https://github.com/freeApplications">freeApplications</vendor>

    <description><![CDATA[
      <h3>PHP Array Converter</h3>
      <p>Converts PHP Arrays and JSON to each other.</p>
      <ul>
        <li>Replaces the JSON text selected by the primary caret with PHP Array.</li>
        <li>Replaces the PHP Array text selected by the primary caret with JSON.</li>
      </ul>
    ]]></description>

    <!-- please see https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>
    <depends>com.jetbrains.php</depends>
    <depends>com.intellij.modules.java</depends>

    <!-- Minimum and maximum build of IDE compatible with the plugin -->
    <idea-version since-build="211"/>

    <resource-bundle>messages.PluginBundle</resource-bundle>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
        <applicationConfigurable parentId="tools"
                                 instance="jp.freeapps.intellij.plugin.phparray.settings.AppSettingsConfigurable"
                                 id="jp.freeapps.intellij.plugin.phparray.settings.AppSettingsConfigurable"
                                 displayName="PHP Array Converter"/>
        <applicationService serviceImplementation="jp.freeapps.intellij.plugin.phparray.settings.AppSettingsState"/>
        <notificationGroup id="Conversion Notification" displayType="BALLOON"/>
    </extensions>

    <actions>
        <!-- Add your actions here -->
        <group id="jp.freeapps.intellij.plugin.phparray" popup="true">
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
            <action id="jp.freeapps.intellij.plugin.phparray.action.JsonToPhpArrayAction"
                    class="jp.freeapps.intellij.plugin.phparray.action.JsonToPhpArrayAction">
            </action>
            <action id="jp.freeapps.intellij.plugin.phparray.action.PhpArrayToJsonAction"
                    class="jp.freeapps.intellij.plugin.phparray.action.PhpArrayToJsonAction">
            </action>
        </group>
    </actions>
</idea-plugin>